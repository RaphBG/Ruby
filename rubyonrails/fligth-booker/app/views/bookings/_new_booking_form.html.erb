<%= form_with model: @booking, local: true do |f| %>
  <% i = 1 %>
  <%= f.fields_for :passengers do |passengers_data| %>
    <%= "Passenger #{i}" %><br/>

    <%= passengers_data.text_field :name, placeholder: "Passenger's name", required: true %><br/>

    <%= passengers_data.email_field :email, placeholder: "name@example.com", required: true %><br/>
    <% i += 1%>
  <% end %>
  
  <%= f.hidden_field :flight_id, value: params[:flight] %><br/>

  <%= f.submit 'Purchase Ticket' %>

<% end %>
