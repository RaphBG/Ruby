<%= @event.name %><br/>
<%= @event.location %><br/>
<%= @event.date %><br/>

<% if !Attend.where(attended_event_id: params[:id]).exists?(attendee_id: current_user) %>
  <%= link_to "Attend", attend_path, method: :post, data: { turbo_method: :post }%><br/>
<% else %>
  <%= link_to "cancel Attending", attend_destroy_path(@event), method: :delete, data: { turbo_method: :delete, turbo_confirm: "Are You sure ?" }%><br/>
<% end %>

<%= @attendees.pluck(:email).join('<br/>').html_safe %>
