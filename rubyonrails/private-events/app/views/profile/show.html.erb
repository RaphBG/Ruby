Events Created<br/>
<% @events.each do |event| %>
  <%= event.name %>
  <%= event.location %>
  <%= event.date %><br/>
<% end %><br/>

Attended Events<br/><br/>
Future Events<br/>
<% @attended_events.each do |event| %>
  <% if event.date > Date.today %>
    <%= event.name %>
    <%= event.location %>
    <%= event.date %>
    <%= event.creator.email %>
    <%= link_to "cancel Attending", attend_destroy_path(event), method: :delete, data: { turbo_method: :delete, turbo_confirm: "Are You sure ?" }%><br/>
  <% end %>
<% end %>
<br/>

Past Events<br/>
<% @attended_events.each do |event| %>
  <% if event.date < Date.today %>
    <%= event.name %>
    <%= event.location %>
    <%= event.date %>
    <%= event.creator.email %><br/>
  <% end %>
<% end %>
